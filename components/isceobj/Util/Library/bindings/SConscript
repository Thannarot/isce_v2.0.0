import os

Import('envCombLib')
package = envCombLib['PACKAGE']
install = envCombLib['PRJ_SCONS_INSTALL'] + '/' + package
build = envCombLib['PRJ_SCONS_BUILD'] + '/' + package
libList = ['combinedLib']
envCombLib.PrependUnique(LIBS = libList)
module = envCombLib.LoadableModule(target = 'combinedlibmodule.abi3.so', source = 'combinedlibmodule.cpp') 
envCombLib.Install(install,module)
envCombLib.Alias('install',install)
envCombLib.Install(build,module)
envCombLib.Alias('build',build)
