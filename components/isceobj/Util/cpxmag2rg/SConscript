import os

Import('envUtil')
envcpxmag2rg = envUtil.Clone()
package = envcpxmag2rg['PACKAGE']
project = 'cpxmag2rg'
envcpxmag2rg['PROJECT'] = project
Export('envcpxmag2rg')

bindingsScons = os.path.join('bindings','SConscript')
SConscript(bindingsScons,variant_dir = os.path.join(envcpxmag2rg['PRJ_SCONS_BUILD'],package,project,'bindings'))

includeScons = os.path.join('include','SConscript')
SConscript(includeScons)

srcScons = os.path.join('src','SConscript')
SConscript(srcScons,variant_dir = os.path.join(envcpxmag2rg['PRJ_SCONS_BUILD'],package,project,'src'))

install = os.path.join(envcpxmag2rg['PRJ_SCONS_INSTALL'],package)
listFiles = ['Cpxmag2rg.py']
envcpxmag2rg.Install(install,listFiles)
envcpxmag2rg.Alias('install',install)
