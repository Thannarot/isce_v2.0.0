import os

Import('envUtil')
envoffoutliers = envUtil.Clone()
package = envoffoutliers['PACKAGE']
project = 'offoutliers'
envoffoutliers['PROJECT'] = project
Export('envoffoutliers')

bindingsScons = os.path.join('bindings','SConscript')
SConscript(bindingsScons,variant_dir = os.path.join(envoffoutliers['PRJ_SCONS_BUILD'],package,project,'bindings'))

includeScons = os.path.join('include','SConscript')
SConscript(includeScons)

srcScons = os.path.join('src','SConscript')
SConscript(srcScons,variant_dir = os.path.join(envoffoutliers['PRJ_SCONS_BUILD'],package,project,'src'))

install = os.path.join(envoffoutliers['PRJ_SCONS_INSTALL'],package)
listFiles = ['Offoutliers.py']
envoffoutliers.Install(install,listFiles)
envoffoutliers.Alias('install',install)

